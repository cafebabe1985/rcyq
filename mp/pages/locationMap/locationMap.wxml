<view class="page-body">
 <view class="cu-bar search bg-white solids-top" id="searchBar">
    <view class="search-form round ">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="搜索图片、文章、视频" confirm-type="search"
      bindfocus="handleFocus"
      ></input>
    </view>
    <view class="action">
      <button class="cu-btn  shadow-blur round">搜索</button>
    </view>
  </view>
  
  <view 
  wx:if="{{showMap}}"
  class="page-section page-section-gap margin-bottom-sm margin-top-sm">
    <map
      id="myMap"
      
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location
    >
    
    </map>
  </view>
<view 
wx:else
class="cu-list menu radius solids">
<view class="cu-item">
      <view class="content padding-tb-sm">
        <view>
          多行Item</view>
        <view class="text-gray text-sm">
           小目标还没有实现！</view>
      </view>
      
    </view>
</view>

  <view class="btn-area">
    <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button>
    <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
    <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button>
    <button bindtap="includePoints" class="page-body-button" type="primary">缩放视野展示所有经纬度</button>
  </view>
</view>
