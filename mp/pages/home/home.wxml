<!--轮播区-->
<view class="home-banner bg-white">
  <swiper class="card-swiper " circular="true" autoplay="false" interval="5000" duration="500" bindchange="cardSwiper">
    <swiper-item class="swiper-banner  radius shadow-warp bg-white " wx:for="{{swiperList}}" wx:key>
      <view class="swiper-item">
        <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>

      </view>
    </swiper-item>
  </swiper>
</view>
<!--吸顶分页导航-->
<view class="navbar-wrap" id="fixedViewWrap">
  <view class="bg-white nav text-center fixed-nav {{isFixedTop?'fixed':''}}" id="navbar">
    <view class="cu-item {{0==TabCur?'text-blue cur':''}}" bindtap="tabSelect" data-id="0">
      <text class="cuIcon-cascades"></text> 小片
    </view>
    <view class="cu-item {{1==TabCur?'text-blue cur':''}}" bindtap="tabSelect" data-id="1">
      <text class="cuIcon-footprint"></text> 活动
    </view>
    <view class="cu-item {{2==TabCur?'text-blue cur':''}}" bindtap="tabSelect" data-id="2">
      <text class="cuIcon-news"></text> 快讯
    </view>
  </view>
  <!--分页列表头部0 小片城市滚动条导航-->
  <view  
  wx:if="{{0==TabCur}}"  
  class="bg-white nav text-center  {{isFixedTop?'fixed':''}}" style="left:0;top:{{navbarHeight}}px;">
    <scroll-view 
       scroll-x class="bg-white nav {{isFixedTop?'fixed':''}}" style="left:0;top:{{navbarHeight}}px" scroll-with-animation scroll-left="{{scrollLeft}}">
      <view class="cu-item {{index==navCur?'text-green cu-tag  light round':''}}" wx:for="{{10}}" wx:key bindtap="navSelect" data-id="{{index}}">
        Tab{{index}}
      </view>
    </scroll-view>
  </view>
<!--分页列表头部1 活动按钮导航-->
  <view  
  wx:if="{{1==TabCur}}"  
  class="bg-white nav text-center  {{isFixedTop?'fixed':''}}" style="left:0;top:{{navbarHeight}}px;">
    <view 
        class="bg-white nav {{isFixedTop?'fixed':''}}" style="left:0;top:{{navbarHeight}}px" >
      <view class="cu-item {{0==activeNavCur?'text-green cu-tag  light round':''}}"  wx:key bindtap="activeNavCurSelect" data-id="0">
        参与活动
      </view>
      <view class="cu-item {{1==activeNavCur?'text-green cu-tag  light round':''}}"  wx:key bindtap="activeNavCurSelect" data-id="1">
        发起活动
      </view>
    </view>
  </view>

</view>

<!--占位区域-->
<view style="height:{{isFixedTop?fixedViewWrapHeight:0}}px"></view>
